<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.helpdesk_mgmt_</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="55" />
        <field name="inherit_id" ref="helpdesk_mgmt_enhanced_base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='helpdesk_enhanced']" position="inside">
                <div name="section_auto_subscribe">
                    <h2>Automatic ticket subscription</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="send_mail_on_create" />
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Enable On Create Email</span>
                                <div class="text-muted">
                                    Enabling this option, the system reply to the customer with email every time a ticket is created
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="on_create_mail_template_id" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
