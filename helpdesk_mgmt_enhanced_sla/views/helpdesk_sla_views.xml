<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="inherit_helpdesk_ticket_sla_form" model="ir.ui.view">
        <field name="name">inherit_helpdesk_ticket_sla_form</field>
        <field name="model">helpdesk.sla</field>
        <field name="inherit_id" ref="helpdesk_mgmt_sla.helpdesk_ticket_sla_form" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_ids']" position="before">
                <field name="team_id" />
            </xpath>
            <xpath expr="//field[@name='team_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='']" position="after">
                <field name="action_ids" />
            </xpath>
        </field>
    </record>

    <record id="inherit_helpdesk_ticket_view_tree" model="ir.ui.view">
        <field name="name">inherit_helpdesk_ticket_view_tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_tree" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='priority']" position="after">
                <field name="sla_id" />
                <field name="sla_status" />
                <field name="sla_deadline" attrs="{'invisible': [('sla_id', '=', False)]}" />
            </xpath>
        </field>
    </record>
</odoo>
